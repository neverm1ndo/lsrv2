{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/*.parser.js", "!**/*.parser.d.ts", "!**/*.spec.ts", "!**/dist/*", "!**/node_modules/**/*"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"bracketSpacing": true,
		"lineEnding": "lf",
		"formatWithErrors": true
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":NODE:",
							":BLANK_LINE:",
							[":PACKAGE:", ":PACKAGE_WITH_PROTOCOL:", "!@lsrv/**"],
							":BLANK_LINE:",
							["@lsrv/**"],
							":BLANK_LINE:",
							":PATH:"
						]
					}
				}
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": {
					"level": "error",
					"fix": "safe"
				}
			},
			"style": {
				"noMagicNumbers": "error",
				"noCommonJs": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "always",
			"lineEnding": "lf",
			"operatorLinebreak": "before",
			"trailingCommas": "none"
		}
	}
}
