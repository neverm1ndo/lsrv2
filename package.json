{
	"name": "lsrv2",
	"version": "0.0.1",
	"description": "New generation LAR server",
	"main": "index.ts",
	"author": "neverm1ndo",
	"license": "MIT",
	"private": true,
	"scripts": {
		"serve": "node --import=tsx --watch src/index.ts",
		"build": "tsc && tsup",
		"peggy:build": "peggy -c peggy.config.mjs",
		"check": "yarn exec biome check --write",
		"test": "vitest run"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"outDir": "dist",
		"format": [
			"esm"
		],
		"target": "es2024",
		"sourcemap": true,
		"clean": true,
		"dts": false,
		"splitting": false,
		"treeshake": true,
		"skipNodeModulesBundle": true
	},
	"dependencies": {
		"connect-mongo": "^5.1.0",
		"cors": "^2.8.5",
		"cron": "^4.3.3",
		"dotenv": "^17.2.1",
		"express": "^5.1.0",
		"express-jwt": "^8.5.1",
		"express-rate-limit": "^8.0.1",
		"express-session": "^1.18.2",
		"helmet": "^8.1.0",
		"http-status-codes": "^2.3.0",
		"jsonwebtoken": "^9.0.2",
		"lodash-es": "^4.17.21",
		"md5": "^2.3.0",
		"mime-types": "^3.0.1",
		"mongoose": "^8.18.0",
		"multer": "^2.0.2",
		"mysql2": "^3.14.3",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"pino": "^9.9.0",
		"pino-http": "^10.5.0",
		"socket.io": "^4.8.1",
		"zod": "^4.0.17"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@types/express-session": "^1.18.2",
		"@types/lodash-es": "^4.17.12",
		"@types/md5": "^2.3.5",
		"@types/passport": "^1.0.17",
		"@types/passport-jwt": "^4.0.1",
		"@types/passport-local": "^1.0.38",
		"@types/supertest": "^6.0.3",
		"peggy": "^5.0.6",
		"pino-pretty": "^13.1.1",
		"supertest": "^7.1.4",
		"tsup": "^8.5.0",
		"tsx": "^4.20.4",
		"typescript": "^5.9.2",
		"vite": "^7.1.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	}
}
